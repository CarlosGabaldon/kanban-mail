
body {
	background: #1C1C1C url(<%= asset_data_uri 'bkgd_screen.jpg' %>) 0 0 repeat-x; 
	color: #333; font-family: "Lucida Grande", "Lucida Sans", Lucida, Verdana, "Trebuchet MS", Arial, Helvetica, sans-serif; 
	font-size: 12px; 
}


a:link, a:visited { color: #000; text-decoration: underline; }
a:hover { color: #fff; background-color: #333; text-decoration: none; }


#slogon{
	
	color: #62C916;
	font-weight:bold;
}

#logo { 
	float:right;
}

#logo a:hover {
	color: #fff;
	background-color: #fff;
	
}

#content {
	background: white; 
	margin: 15px auto; 
	padding: 20px; 
	width: 800px;
}

#content p {
	margin-bottom: 10px;
}



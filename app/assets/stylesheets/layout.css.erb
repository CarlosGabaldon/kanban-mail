#footer { color: #939393; font-size: 11px; padding-top: 0px;}
#footer a:link, #footer a:visited {color: #939393; text-decoration: underline;}
#footer a:hover {color: #E6E6E6; text-decoration: none;}
#footer a:active {color: #FFF; text-decoration: none;}
#footer { text-align: center;  }



